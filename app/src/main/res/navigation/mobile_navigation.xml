<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.sneakerfinder.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_scanner"
            app:destination="@id/navigation_scanner"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_saved_results"
        android:name="com.example.sneakerfinder.ui.saved_results.SavedResultsFragment"
        android:label="@string/title_saved_results"
        tools:layout="@layout/fragment_saved_results" />

    <fragment
        android:id="@+id/navigation_scanner"
        android:name="com.example.sneakerfinder.ui.scanner.ScannerFragment"
        android:label="@string/title_scanner"
        tools:layout="@layout/fragment_scanner" >
        <action
            android:id="@+id/action_scanner_to_home"
            app:destination="@id/navigation_home" />
        <action
            android:id="@+id/action_scanner_to_scanner_processing"
            app:destination="@id/navigation_scanner_processing" />
    </fragment>
    <fragment
        android:id="@+id/navigation_scanner_processing"
        android:name="com.example.sneakerfinder.ui.scanner.ScannerProcessingFragment"
        android:label="ScannerProcessingFragment" >
        <action
            android:id="@+id/action_scanner_processing_to_home"
            app:destination="@id/navigation_home" />
    </fragment>
</navigation>