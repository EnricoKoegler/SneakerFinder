<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/round_border_line"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/shoe_iv"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:minWidth="150dp"
        app:srcCompat="@drawable/alert_triangle_grey" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shoe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="Shoe name" />

        <TextView
            android:id="@+id/shoe_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            tools:text="scanned on 01/01/2000" />

        <TextView
            android:id="@+id/shoe_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            tools:text="200$" />

    </LinearLayout>

    <ImageView
        android:id="@+id/shoe_drill_down"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:background="@drawable/shoe_drill_down_bg"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:src="@drawable/chevron_right"
        android:textAlignment="center" />

</LinearLayout>
