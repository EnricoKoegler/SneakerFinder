<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:src="@drawable/appicon" />


    <Button
        android:id="@+id/btn_capture_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="60dp"
        android:backgroundTint="@color/black"
        android:drawableLeft="@drawable/camera_02_capture_red"
        android:drawableRight="@drawable/chevron_right"
        android:fontFamily="@font/poppins_bold"
        android:letterSpacing="0"
        android:text="Capture now!"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/btn_upload_from_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/darkgrey"
        android:drawableLeft="@drawable/upload_02_white"
        android:drawableRight="@drawable/chevron_right"
        android:fontFamily="@font/poppins_medium"
        android:letterSpacing="0"
        android:text="Upload from Gallery"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:cornerRadius="10dp">

    </Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Latest Scan results"
            android:textColor="@color/black"
            android:textSize="16dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="right"
            android:text="->"
            android:textColor="@color/black"
            android:textSize="16dp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fragement_placeholder0"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/fragement_placeholder1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:layout_weight="1.2" />

        <FrameLayout
            android:id="@+id/fragement_placeholder2"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_gravity="center_vertical"

            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Further recommendations"
            android:textColor="@color/black"
            android:textSize="16dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="right"
            android:text="->"
            android:textColor="@color/black"
            android:textSize="16dp">

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fragement_placeholder3"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/fragement_placeholder4"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1" />


    </LinearLayout>


</LinearLayout>
