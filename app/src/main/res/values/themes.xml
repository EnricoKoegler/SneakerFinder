<resources>
    <!-- Base application theme. -->
    <style name="Theme.SneakerFinder" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkblue</item>
        <item name="colorPrimaryVariant">@color/lightblue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/lightred</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/darkgrey</item>
        <!-- Customize your theme here. -->
        <item name="android:textAppearance">@style/TextAppearanceStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
    </style>

    <style name="Theme.SneakerFinder.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SneakerFinder.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SneakerFinder.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearanceStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darkgrey</item>
    </style>

    <style name="TextAppearanceStyle.Heading">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonStyle.Cta">
        <item name="android:drawableRight">@drawable/chevron_right</item>
    </style>

    <style name="ButtonStyle.Secondary">
        <item name="backgroundTint">@color/lightgrey</item>
    </style>
</resources>